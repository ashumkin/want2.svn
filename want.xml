<!-- This is the Dante script for building Dante -->
<project name="dante"
         basedir=".."
         default="dist" >

  <target name="clean" >
    <delete dir=".\dist" />
  </target>

  <target name="prepare" depends="clean" >
  </target>

  <target name="compile" depends="prepare" >
    <dcc source="./src/dante.dpr"
      exes="."
      dcus="./dcu"
      quiet="true"
      build="true"
    >
      <unit path="./src" />
      <unit path="./src/tasks" />
      <unit path="./src/jcl" />
      <unit path="./src/xml" />
      <unit path="./src/paths" />
    </dcc>
  </target>

  <target name="dist" depends="compile" >
    <shell executable="mkdir" arguments=".\dist" />
    <shell executable="copy"  arguments=".\src\dante.exe .\dist\dante.exe"  />
    <exec executable=".\make\zip.exe" arguments="-m .\make\dante.zip .\dist\dante.exe" />
  </target>

</project>
